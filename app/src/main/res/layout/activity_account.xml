<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".AccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/homepage_app_header"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/hello"
            android:layout_marginTop="70dp"
            android:text="Hello,"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/name"
            android:layout_marginTop="70dp"
            android:hint="login first"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/hello"/>

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="105dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="106dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:id="@+id/labelUserName"
            android:text="Name   :"
            android:layout_below="@id/profilePic"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/userName"
            android:layout_toRightOf="@+id/labelUserName"
            android:layout_marginTop="335dp"
            android:hint="login first"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Email    :"
            android:id="@+id/labelEmail"
            android:layout_below="@id/labelUserName"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/email"
            android:layout_toRightOf="@+id/labelEmail"
            android:layout_marginTop="370dp"
            android:hint="login first"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="User ID :"
            android:id="@+id/labelUID"
            android:layout_below="@id/labelEmail"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/UID"
            android:layout_toRightOf="@+id/labelUID"
            android:layout_marginTop="405dp"
            android:hint="login first"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Status  :"
            android:id="@+id/labelStatus"
            android:layout_below="@id/labelUID"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/status"
            android:layout_toRightOf="@+id/labelStatus"
            android:layout_marginTop="440dp"
            android:hint="login first"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Role     :"
            android:id="@+id/labelRole"
            android:layout_below="@id/labelStatus"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/role"
            android:layout_toRightOf="@+id/labelRole"
            android:layout_marginTop="475dp"
            android:hint="login first"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Phone  :"
            android:id="@+id/labelPhone"
            android:layout_below="@id/labelRole"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/phone"
            android:layout_toRightOf="@+id/labelPhone"
            android:layout_marginTop="510dp"
            android:hint="login first"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Age      :"
            android:id="@+id/labelAge"
            android:layout_below="@id/labelPhone"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/age"
            android:layout_toRightOf="@+id/labelAge"
            android:layout_marginTop="545dp"
            android:hint="login first"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Credit   :"
            android:id="@+id/labelCredit"
            android:layout_below="@id/labelAge"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/credit"
            android:layout_toRightOf="@+id/labelCredit"
            android:layout_marginTop="580dp"
            android:hint="login first"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@id/credit"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="81dp"
            android:background="@drawable/confirm_add_button"
            android:text="logout"
            android:textColor="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include layout="@layout/main_navigation_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>