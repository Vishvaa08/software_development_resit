<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".CheckoutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/homepage_app_header"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/labelTotal"
            android:text="Total Payment :"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/total"
            android:layout_toRightOf="@+id/labelTotal"
            android:layout_marginTop="90dp"
            android:hint="total cost"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:id="@+id/labelUserName"
            android:text="Name   :"
            android:layout_below="@id/profilePic"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:layout_marginTop="220dp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/userName"
            android:layout_toRightOf="@+id/labelUserName"
            android:layout_marginTop="220dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Email    :"
            android:id="@+id/labelEmail"
            android:layout_below="@id/labelUserName"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/email"
            android:layout_toRightOf="@+id/labelEmail"
            android:layout_marginTop="255dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="User ID :"
            android:id="@+id/labelUID"
            android:layout_below="@id/labelEmail"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/UID"
            android:layout_toRightOf="@+id/labelUID"
            android:layout_marginTop="290dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Status  :"
            android:id="@+id/labelStatus"
            android:layout_below="@id/labelUID"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/status"
            android:layout_toRightOf="@+id/labelStatus"
            android:layout_marginTop="325dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Role     :"
            android:id="@+id/labelRole"
            android:layout_below="@id/labelStatus"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/role"
            android:layout_toRightOf="@+id/labelRole"
            android:layout_marginTop="360dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Phone  :"
            android:id="@+id/labelPhone"
            android:layout_below="@id/labelRole"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/phone"
            android:layout_toRightOf="@+id/labelPhone"
            android:layout_marginTop="395dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Age      :"
            android:id="@+id/labelAge"
            android:layout_below="@id/labelPhone"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/age"
            android:layout_toRightOf="@+id/labelAge"
            android:layout_marginTop="430dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Credit   :"
            android:id="@+id/labelCredit"
            android:layout_below="@id/labelAge"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/credit"
            android:layout_toRightOf="@+id/labelCredit"
            android:layout_marginTop="465dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/btnConfirmPayment"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="150dp"
            android:layout_marginLeft="130dp"
            android:backgroundTint="@color/orange"
            android:text="Pay"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include layout="@layout/main_navigation_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>