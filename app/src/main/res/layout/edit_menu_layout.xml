<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/itemPic"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/labelItemName"
        android:text="Name :"
        android:layout_toRightOf="@+id/itemPic"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/itemName"
        android:layout_toRightOf="@+id/itemPic"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:hint="Name"
        android:layout_below="@id/labelItemName"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:id="@+id/labelItemPrice"
        android:layout_toRightOf="@id/itemPic"
        android:layout_below="@id/itemName"
        android:text="Price :"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:id="@+id/itemPrice"
        android:layout_toRightOf="@+id/itemPic"
        android:layout_below="@+id/labelItemPrice"
        android:layout_marginStart="5dp"
        android:hint="Price"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/labelSubCategory"
        android:text="Category :"
        android:layout_toRightOf="@id/labelItemName"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/itemSubCategory"
        android:layout_toRightOf="@id/itemName"
        android:layout_below="@+id/labelSubCategory"
        android:hint="Sub Category"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/labelStatus"
        android:text="Status :"
        android:layout_toRightOf="@+id/labelItemPrice"
        android:layout_below="@+id/itemSubCategory"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/itemStatus"
        android:hint="Status"
        android:layout_toRightOf="@+id/itemPrice"
        android:layout_below="@+id/labelStatus"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnEditItem"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:layout_below="@+id/itemPic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/confirm_add_button"
        android:text="Edit"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnDeleteItem"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="171dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/btnEditItem"
        android:layout_toRightOf="@+id/btnEditItem"
        android:background="@drawable/confirm_add_button"
        android:text="Delete"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="17dp"
        android:layout_below="@+id/btnEditItem"
        android:background="@color/black"/>

</RelativeLayout>