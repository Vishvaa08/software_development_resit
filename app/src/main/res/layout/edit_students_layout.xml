<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/studentPic"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/labelStudentName"
        android:layout_toRightOf="@id/studentPic"
        android:text="Name :"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/studentName"
        android:layout_toRightOf="@+id/studentPic"
        android:layout_below="@id/labelStudentName"
        android:layout_marginStart="5dp"
        android:hint="Name"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/labelStudentPhone"
        android:layout_toRightOf="@id/studentPic"
        android:text="Phone :"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@id/studentName"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/studentPhone"
        android:layout_toRightOf="@+id/studentPic"
        android:layout_below="@+id/labelStudentPhone"
        android:layout_marginStart="5dp"
        android:hint="Phone"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/labelStudentEmail"
        android:layout_toRightOf="@id/studentPic"
        android:text="Email :"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@id/studentPhone"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/studentEmail"
        android:layout_toRightOf="@+id/studentPic"
        android:layout_below="@+id/labelStudentEmail"
        android:hint="Email"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/labelStudentCredit"
        android:layout_toRightOf="@+id/labelStudentName"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Credit :"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/studentCredit"
        android:layout_toRightOf="@+id/studentName"
        android:layout_below="@id/labelStudentCredit"
        android:hint="Credit"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/labelStudentStatus"
        android:layout_toRightOf="@+id/labelStudentPhone"
        android:layout_below="@+id/studentCredit"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Status :"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/studentStatus"
        android:layout_toRightOf="@+id/studentPhone"
        android:layout_below="@+id/labelStudentStatus"
        android:layout_marginStart="5dp"
        android:hint="Status"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:id="@+id/btnVerifyStudent"
        android:text="Verify"
        android:layout_marginStart="40dp"
        android:background="@drawable/confirm_add_button"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/studentPic"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:id="@+id/btnAddCredit"
        android:text="Credit"
        android:layout_toRightOf="@+id/btnVerifyStudent"
        android:layout_marginTop="180dp"
        android:background="@drawable/confirm_add_button"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"/>

    <Button
        android:id="@+id/btnDeleteStudent"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/btnAddCredit"
        android:background="@drawable/confirm_add_button"
        android:text="Delete"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="17dp"
        android:layout_below="@+id/btnVerifyStudent"
        android:background="@color/black"/>

</RelativeLayout>