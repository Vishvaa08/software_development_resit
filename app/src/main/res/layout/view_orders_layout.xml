<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/labelOrderName"
        android:text="Name :"
        android:textSize="15dp"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/orderName"
        android:layout_marginTop="5dp"
        android:layout_marginStart="50dp"
        android:hint="Name"
        android:layout_below="@id/labelOrderName"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:id="@+id/labelOrderStatus"
            android:layout_below="@id/orderName"
            android:text="Status :"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:id="@+id/orderStatus"
            android:layout_below="@+id/labelOrderStatus"
            android:layout_marginStart="50dp"
            android:hint="Status"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/labelOrderPrice"
            android:text="Price :"
            android:layout_toRightOf="@id/labelOrderName"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/orderPrice"
            android:layout_toRightOf="@id/orderName"
            android:layout_below="@+id/labelOrderPrice"
            android:hint="Price"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/labelOrderQuantity"
            android:text="Quantity :"
            android:layout_toRightOf="@+id/labelOrderStatus"
            android:layout_below="@+id/orderPrice"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/orderQuantity"
            android:hint="Quantity"
            android:layout_toRightOf="@+id/orderStatus"
            android:layout_below="@+id/labelOrderQuantity"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="17dp"
            android:layout_below="@+id/orderQuantity"
            android:background="@color/black"/>

</RelativeLayout>