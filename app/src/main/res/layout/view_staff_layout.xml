<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/staffPic"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/labelStaffName"
        android:layout_toRightOf="@id/staffPic"
        android:text="Name :"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/staffName"
        android:layout_toRightOf="@+id/staffPic"
        android:layout_below="@id/labelStaffName"
        android:layout_marginStart="5dp"
        android:hint="Name"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/labelStaffPhone"
        android:layout_toRightOf="@id/staffPic"
        android:layout_below="@+id/staffName"
        android:text="Phone :"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/staffPhone"
        android:layout_toRightOf="@+id/staffPic"
        android:layout_below="@+id/labelStaffPhone"
        android:layout_marginStart="5dp"
        android:hint="Phone"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/labelStaffEmail"
        android:layout_toRightOf="@id/staffPic"
        android:text="Email :"
        android:layout_below="@+id/staffPhone"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/staffEmail"
        android:layout_toRightOf="@+id/staffPic"
        android:layout_below="@+id/labelStaffEmail"
        android:hint="Email"
        android:layout_marginStart="5dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="17dp"
        android:layout_below="@+id/staffEmail"
        android:background="@color/black"/>

</RelativeLayout>