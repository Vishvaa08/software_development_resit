<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/menuPic"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/labelMenuName"
        android:layout_toRightOf="@id/menuPic"
        android:text="Name :"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/menuName"
        android:layout_toRightOf="@+id/menuPic"
        android:layout_below="@id/labelMenuName"
        android:layout_marginStart="20dp"
        android:hint="Name"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/labelMenuPrice"
        android:layout_toRightOf="@id/labelMenuName"
        android:text="Price :"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/menuPrice"
        android:layout_toRightOf="@+id/menuName"
        android:layout_below="@+id/labelMenuPrice"
        android:layout_marginStart="5dp"
        android:hint="Price"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="17dp"
        android:layout_below="@+id/menuPic"
        android:background="@color/black"/>

</RelativeLayout>